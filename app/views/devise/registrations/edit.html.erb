<div class="container">
  <div class="row">
    <h2>Профиль пользователя</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group col-md-4">
        <label for="email">Email</label>
        <%= f.email_field(:email, { :class => 'form-control' }) %>
      </div>

      <div class="form-group col-md-4">
        <label for="password">Новый пароль</label>
        </label>
      </div>

      <div class="form-group col-md-4">
        <label for="password_confirmation">Повторите пароль</label>
        <%= f.password_field(:password_confirmation, { :class => 'form-control' }) %>
      </div>

      <div class="form-group col-md-4">
        <label for="password_confirmation">Старый пароль</label>
        <%= f.password_field(:current_password, { :class => 'form-control' }) %>
      </div>

      <br>
      <div class="col-md-4">
        <button type="submit" class="btn btn-primary">Обновить информацию</button>
      </div>
    <% end %>

    <div>
      <br>
      <%= button_to "Удалить аккаунт", registration_path(resource_name), data: { confirm: "Вы уверены?" }, :class => "btn btn-danger", method: :delete %>
    </div>

  </div>
</div>
