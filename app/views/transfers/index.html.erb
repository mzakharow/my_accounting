<div class="container">
  <div class="row">
    <p style="color: green"><%= notice %></p>

    <h1>Список операций</h1>
    <div id="transfers">
      <table class="table table-striped">
        <thead>
        <tr>
          <th scope="col">Операция</th>
          <th scope="col">Сумма</th>
          <th scope="col">Описание</th>
          <th scope="col">Дата</th>
          <th scope="col">Действия</th>
        </tr>
        </thead>
        <% @transfers.each do |transfer| %>
          <tbody>
          <tr>
            <th scope="row"><%= transfer.income ? "приход" : "расход" %></th>
            <td><%= transfer.sum %></td>
            <td><%= transfer.description %></td>
            <td><%= transfer.created_at.strftime("%d %b. %Y") %></td>
            <td>
              <div class="row">
                <div class="btn-group">
                  <%= button_to "Подробнее", transfer, :id => "open-contacts-dialog-btn",
                                :class => "btn btn-success", :method => :get %>
                  <%= button_to "Изменить", edit_transfer_path(transfer), :id => transfer.id,
                                :class => "btn btn-primary", :method => :get %>
                  <%= button_to "Удалить", transfer, :id => "open-contacts-dialog-btn",
                                :class => "btn btn-danger ", :method => :delete %>
                </div>
              </div>
            </td>
          </tr>
          </tbody>
        <% end %>
        <tr>
          <th scope="row">Итого:</th>
          <td><%= @total_amount %></td>
          <td></td>
          <td></td>
          <td></td>
        </tr>
      </table>
    </div>

    <%= link_to "Добавить операцию", new_transfer_path %>

  </div>
</div>