<%= form_with(model: transfer) do |form| %>
  <% if transfer.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(transfer.errors.count, "ошибка") %> при сохранении операции:</h2>
      <ul>
        <% transfer.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="col-sm-10">
    <div class="form-check">
      <%= form.check_box(:income, { :class => 'form-check-input' }) %>
      <label class="form-check-label" for="income">приход</label>
    </div>
  </div>

  <div class="form-group col-md-4">
    <label for="description">Сумма</label>
    <%= form.text_field(:sum, { :class => 'form-control' }) %>
  </div>

  <div class="form-group col-md-4">
    <label for="description">Описание</label>
    <%= form.text_area(:description, { :class => 'form-control' }) %>
  </div>
  <br>
  <div class="col-md-4">
    <button type="submit" class="btn btn-primary">Сохранить</button>
  </div>
  <br>
<% end %>

